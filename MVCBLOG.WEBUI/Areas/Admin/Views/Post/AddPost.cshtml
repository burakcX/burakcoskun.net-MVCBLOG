    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Makale Ekle</h2>

<div class="row">
    <div class="col-lg-6">
        @*@Html.Partial("~/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")*@

