        <div class="form-group">
            <label>Açıklama</label>
            @Html.TextAreaFor(x => x.ContentDto, new { @class = "ckeditor" })
            @*<textarea class="ckeditor" name="Content"></textarea>*@
            @*@Html.ValidationMessageFor(x => x.Description)*@
        </div>
        @*<div class="form-group">
            <label>Dosya Seç</label>
