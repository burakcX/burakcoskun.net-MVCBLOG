@using MVCBLOG.BLL.UIServices.Class
@using MVCBLOG.WEBUI.ViewModel
@model List<CounterViewModel>


@foreach (var item in Model)
{
    <a href="/Home/PostByCategory/@item.CatId"
       title="@item.CatDesc"
       class="menu-item list-group-item">
        @item.KategoriAdi
        <span class="badge" style="background-color: #5F4586 !important;">@item.KategoridekiPostSayisi</span>
    </a>
}